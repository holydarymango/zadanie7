<Window x:Class="Proect_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Proect_7"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FontFamily="Rajdhani"
        Height="768" 
        Width="1366">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="883"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="2"
                Margin="-64,-20,0,0"
                Width="1014"
                Height="795"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <Border.Background>
                <ImageBrush ImageSource="/Images/main_bg.png" />
            </Border.Background>
        </Border>

        <Border HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Width="430"
                Height="94"
                Margin="30 0 0 90 ">
            <Border.Background>
                <ImageBrush ImageSource="/Images/bg_login.png" />
            </Border.Background>
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Text="Практическая работа №8"
                           Foreground="white"
                           FontSize="32"
                           FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1"
                Width="484"
                Height="579"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Background>
                <ImageBrush ImageSource="/Images/login_bg.png" />
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height=" 140"/>
                    <RowDefinition Height="1.1*"/>
                    <RowDefinition Height=" 1*"/>
                </Grid.RowDefinitions>

                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="Ключ к возможностям"
                               FontSize="32"
                               Foreground="White"
                               TextAlignment="Center"
                               FontWeight="Bold"/>
                    <TextBlock Text="Подключайся к нам"
                               FontSize="20"
                               Margin="0 10 0 0 "
                               Foreground="White"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <TextBox Width="430"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Foreground="White"
                             FontSize="20"
                             x:Name="TbUID"
                             BorderBrush="{Binding ElementName=TbUID, Path=Foreground}"
                             materialDesign:HintAssist.Hint="Введите UID"/>

                    <TextBox Width="430"
                             Margin="0 20 0 0"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Foreground="White"
                             FontSize="20"
                             x:Name="TbLogin"
                             BorderBrush="{Binding ElementName=TbUID, Path=Foreground}"
                             materialDesign:HintAssist.Hint="Введите логин"/>

                    <PasswordBox Width="430"
                                 Margin="0 20 0 0"
                                 x:Name="PbPassword"
                                 FontSize="20"
                                 MaxLength="15"
                                 Foreground="White"
                                 BorderBrush="{Binding ElementName=PbPassword, Path= Foreground}"
                                 materialDesign:HintAssist.Hint="Введите пароль"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"/>

                </StackPanel>
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Height="50"
                            x:Name="BtnLogin"
                            Click="BtnLogin_Click"
                            Foreground="{Binding ElementName=TbLogin, Path=Foreground}"
                            BorderBrush="{Binding ElementName=TbLogin, Path=Foreground}"
                            materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                            materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                            materialDesign:ButtonProgressAssist.Value="-1"
                            materialDesign:ButtonProgressAssist.IndicatorForeground="{Binding ElementName=TbLogin, Path=Foreground}"
                            materialDesign:ButtonProgressAssist.IndicatorBackground="Transparent"
                            Style="{StaticResource MaterialDesignOutlinedButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Войти в систему"
                                       Foreground="white"
                                       Margin="0 0 5 0"/>
                            <materialDesign:PackIcon Kind="Login"
                                                     VerticalAlignment="Center"
                                                     Foreground="black"
                                                     Width="20"
                                                     Height="20"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="1"
                            Grid.Row="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Height="50"
                            x:Name="BtnRegister"
                            Click="BtnRegister_Click"
                            Foreground="black"
                            Background="{Binding ElementName=TbLogin, Path=Foreground}"
                            BorderBrush="{Binding ElementName=TbLogin, Path=Foreground}"
                            materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                            materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                            materialDesign:ButtonProgressAssist.Value="-1"
                            materialDesign:ButtonProgressAssist.IndicatorForeground="black"
                            materialDesign:ButtonProgressAssist.IndicatorBackground="Transparent"
                            Style="{StaticResource MaterialDesignOutlinedButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Получить доступ"
                                       Margin="0 0 5 0"/>
                            <materialDesign:PackIcon Kind="Register"
                                                     VerticalAlignment="Center"
                                                     Width="20"
                                                     Height="20"/>
                        </StackPanel>
                    </Button>

                    <Separator Grid.Row="1"
                               Margin="25 0 25 0"
                               Grid.ColumnSpan="2"
                               VerticalAlignment="Top"
                               Background="{Binding ElementName=TbLogin, Path=Foreground}"/>

                    <Button Grid.ColumnSpan="2"
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Height="50"
                            x:Name="BtnFullAutentication"
                            Click="BtnFullAutentication_Click"
                            Foreground="White"
                            BorderBrush="White"
                            materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                            materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                            materialDesign:ButtonProgressAssist.Value="-1"
                            materialDesign:ButtonProgressAssist.IndicatorForeground="White"
                            materialDesign:ButtonProgressAssist.IndicatorBackground="Transparent"
                            Style="{StaticResource MaterialDesignOutlinedButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Получить полный доступ"
                                      
                                       Margin="0 0 5 0"/>
                            <materialDesign:PackIcon Kind="Done"
                                                     VerticalAlignment="Center"
                                                     Width="20"
                                                     Height="20"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Border>

    </Grid>
</Window>
